<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="ListItemTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_high</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ListHeaderTheme" parent="@style/ListItemTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_high</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BaseTheme">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_high</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ButtonStyle" parent="@style/BaseTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:shadowColor">@color/gray</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextHuge" parent="@style/BaseTheme">
        <item name="android:textSize">@dimen/textsize_huge</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>